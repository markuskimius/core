function usage() {
    cat <<EOF
Output stdin with line numbers in the reverse order.

Usage: ${SCRIPTNAME}

Examples:

  # ls with line numbers in the reverse order
  ls | ${SCRIPTNAME}

EOF
}


##############################################################################
# PROGRAM BEGINS HERE

SCRIPTNAME=$(basename -- "$BASH_SOURCE")


function main() {
    if [[ "$1" == "-h" || "$1" == "--help" ]]; then
        usage && exit 0
    fi

    rebmun "$@"
}


function rebmun() {
    tac "$@" | cat -n | tac
}


##############################################################################
# ENTRY POINT

main "$@"
