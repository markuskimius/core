function usage() {
    cat <<EOF
Format and output a manpage file.

Usage: ${SCRIPTNAME} [FILE.n]

  FILE.n                Manpage file to output.

Examples:

  # Read the core manpage without installing it
  ${SCRIPTNAME} core.1

EOF
}


##############################################################################
# PROGRAM BEGINS HERE

source "getopt.sh" || exit 1

SCRIPTNAME=$(basename -- "$BASH_SOURCE")


function main() {
    local OPTOPT OPTARG
    local errcount=0

    # Process options
    while getopt-sh "h" "help" "$@"; do
        case "$OPTOPT" in
            -h|--help)     usage && exit 0          ;;
            *)             errcount=$((errcount+1)) ;;
        esac
    done

    # Sanity check
    if (( errcount )); then
        echo "Type '${SCRIPTNAME} -h' for help." 1>&2
        exit 1
    fi

    mancat "${OPTARG[@]}"
}


function mancat() {
    # Read from stdin if no filename
    if (( $# == 0 )); then
        set -- /dev/stdin
    fi

    man -l "$@" 2>/dev/null \
    || groff -t -e -mandoc -Tascii "$@"
#    || groff -t -e -mandoc -Tascii "$@" | col -bx
}


##############################################################################
# ENTRY POINT

main "$@"
